<%include ../partials/header%>
<div>
    <h3 class="text-center mt-5 mb-2">Add New Campground</h3>
    <div class="col-lg-4 col-md-5 col-sm-7 mx-auto mt-10">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Campground Title" name="campground[title]"  required>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="number" placeholder="Campground Price" name="campground[price]" min="0.01" step="0.01" required>
            </div>
            
            <div class="form-group">
                <input class="form-control" type="text" placeholder="Campground URL" name="campground[image]" required>
            </div>
            
            <div class="form-group">
                <textarea class="form-control" placeholder="Campground Discription" name="campground[discription]" required></textarea>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
        </form>
    </div>
</div>
<%include ../partials/footer%>