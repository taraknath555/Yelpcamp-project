<%include ../partials/header%>
<div>
    <h3 class="text-center mt-5 mb-2">Edit Campground</h3>
    <div class="col-lg-4 col-md-5 col-sm-7 mx-auto">
        <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.title%>" name="campground[title]" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" value="<%=campground.price%>" name="campground[price]" min="0.01" step="0.01" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" value="<%=campground.image%>" name="campground[image]" required>
            </div>
            <div class="form-group">
                <textarea class="form-control" name="campground[discription]" required><%=campground.discription%></textarea>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Update</button>
        </form>
    </div>
</div>
<%include ../partials/footer%>